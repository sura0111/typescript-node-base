{
  "name": "ts-node-project",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn clear && yarn compile",
    "clear": "rimraf dist",
    "compile": "webpack && cp -R @types dist && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "postpublish": "yarn clear && git push",
    "prepublish": "yarn build",
    "execute": "ts-node -r tsconfig-paths/register",
    "start": "yarn execute ./src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "repository": "git@github.com:sura0111/tsNodeProject.git",
  "author": "sura0111 <sura0111@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.11",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  }
}
